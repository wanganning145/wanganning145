mport turtle
 
screen = turtle.Screen()
pen = turtle.Turtle()
 
pen.pensize(3)
pen.speed(10)
 
screen.bgcolor("black")
 
def fireworks():
    for i in range(30):
        pen.color("red")
        pen.forward(200)
        pen.left(170)

